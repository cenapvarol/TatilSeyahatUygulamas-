@using TravelTripProje.Models.Siniflar
@model List<Yorumlar>

@{
    ViewBag.Title = "Yorumlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorumlar listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>BlokId</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Kullanici</td>
            <td>@item.Mail</td>
            <td>@item.Yorum</td>
            <td>@item.Blogid</td>
            <td><a href="/Admin/YorumSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YorumGuncelle/@item.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>

    }
</table>

