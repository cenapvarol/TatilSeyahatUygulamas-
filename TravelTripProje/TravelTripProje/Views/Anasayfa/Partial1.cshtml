@using TravelTripProje.Models.Siniflar;


@foreach (var item in ViewBag.data)
{
    <div class="left">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="left-text">
            <h4>@item.Baslik</h4>
            <p>@item.Aciklama.Substring(0,50)</p>
            <span class="date">@item.Tarih.ToString("dd MM yyyy")</span>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Detaya Git</span></a></p>
        </div>
    </div>

}
