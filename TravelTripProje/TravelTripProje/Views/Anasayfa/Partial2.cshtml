@using TravelTripProje.Models.Siniflar;
@model List<Blog>


@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <p>@x.Aciklama.Substring(0,50)</p>
            <span class="date">@x.Tarih.ToString("dd MM yyyy")</span>
            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Detaya Git</span></a></p>
        </div>
    </div>
}
