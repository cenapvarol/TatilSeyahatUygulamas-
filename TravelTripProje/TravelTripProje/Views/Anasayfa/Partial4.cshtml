@using TravelTripProje.Models.Siniflar

@model List<Blog>

<div class="box-left">
    @foreach (var item in Model)
    {
        <div class="bot-img">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="bot-desc">
            <p>@item.Aciklama.Substring(0,80)</p>
        </div>
        <div class="clear"></div>
    }
</div>
